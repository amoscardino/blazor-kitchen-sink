@page "/counter"

<h1>Counter</h1>

<p>
    You've clicked the button @Count @(Count == 1 ? "time" : "times").
</p>

<p>
    <button class="btn btn-primary" @onclick="IncrementCount">
        Increment
    </button>

    <button class="btn btn-secondary" @onclick="ResetCount">
        Reset
    </button>
</p>

@code {
    private int Count = 0;

    private void IncrementCount() => Count++;

    private void ResetCount() => Count = 0;
}
